{
    "brolit_project_deploy_config_version": "1.2",
    "project": [
        {
            "path": "/var/www/example-domain.com",
            "name": "exampledomain",
            "stage": "prod",
            "type": "wordpress",
            "db_name": "exampledomain_prod",
            "db_host": "localhost",
            "primary_subdomain": "example-domain.com",
            "secondary_subdomains": [ "www.example-domain.com", "www2.example-domain.com" ],
            "override_nginx_conf": "true",
            "use_hhtp2": "true",
            "certbot_mode": "cloudflare"
        }
    ],
    "cloudflare": [
        {
            "status": "enabled",
            "config": [
                {
                    "email": "domain@example-domain.com",
                    "api_key": "CLOUDFLARE_GLOBAL_API_KEY",
                    "zone_id": "CLOUDFLARE_DOMAIN_ZONE_ID",
                    "proxy": "enabled",
                    "ssl_mode": "full"
                }
            ]
        }
    ],
    "backup_retention": [
        {
            "keep_daily": "7",
            "keep_weekly": "0",
            "keep_monthly": "0"
        }
    ]
}