server {

    charset utf-8;
    
    listen 80;

    server_name domain.com;

    root /var/www/domain.com/public;
    
    index index.html index.htm index.php;
    
    error_log   /var/log/nginx/domain.com-error.log;

    error_page 404 /index.php;
    
    location / {
        try_files $uri $uri/ /index.php?q=$uri&$args;			
    }

    location ~ \.php$ {
        include snippets/fastcgi-php.conf;
        fastcgi_pass unix:/run/php/phpPHP_V-fpm.sock;
        fastcgi_buffering off;
    }

    ### INC
    #include /var/www/domain.com/nginx.conf;
    
    ### PERF
    gzip_static on;

    ### SEC
    #include /etc/nginx/globals/security.conf;

    server_tokens off;
    
    #### SECURITY HEADERS
    add_header X-Frame-Options SAMEORIGIN;
    add_header Strict-Transport-Security "max-age=31536000";
    add_header X-Content-Type-Options nosniff;
    add_header X-XSS-Protection "1; mode=block";
    add_header Referrer-Policy "strict-origin";
    add_header Content-Security-Policy "default-src 'none'; script-src 'self'; connect-src 'self'; img-src 'self'; style-src 'self';";

}